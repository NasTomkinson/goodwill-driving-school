---

interface Props {
    heading: string,
    subheading: string
}

const { heading, subheading} = Astro.props

---
<div class="flex flex-col justify-start gap-4">
    { heading && <h2 class="text-3xl lg:text-4xl font-bold"> { heading } </h2>}
    { subheading && <p class="text-base lg:text-lg text-neutral-700"> { subheading } </p> }
</div>